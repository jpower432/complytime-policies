{
  "$schema": "https://calm.finos.org/release/1.1/meta/calm.json",
  "$id": "https://patterns.complytime.org/complytime-compliance-ecosystem.pattern.json",
  "title": "ComplyTime Compliance Ecosystem Pattern",
  "description": "Pattern for ComplyTime compliance-as-code architectures with enforced metadata standards",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "https://calm.finos.org/release/1.1/meta/core.json#/defs/node"
          },
          {
            "$ref": "https://standards.complytime.org/complytime-node-metadata.standard.json"
          }
        ]
      }
    },
    "relationships": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "https://calm.finos.org/release/1.1/meta/core.json#/defs/relationship"
          },
          {
            "$ref": "https://standards.complytime.org/complytime-relationship-metadata.standard.json"
          }
        ]
      }
    }
  },
  "required": ["nodes", "relationships"]
}
